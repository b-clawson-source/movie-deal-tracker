# Database URL (PostgreSQL for Railway, leave blank for SQLite locally)
# Railway will auto-populate this when you add a PostgreSQL database
DATABASE_URL=

# SerpAPI Key - Get from https://serpapi.com/
SERPAPI_KEY=

# OpenAI API Key - Get from https://platform.openai.com/api-keys
# Optional: Only needed for LLM-enhanced classification and search
OPENAI_API_KEY=

# TMDB API Key - Get from https://www.themoviedb.org/settings/api
# Optional: Enables movie suggestions with thumbnails in search
TMDB_API_KEY=

# Email Configuration (Resend)
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=
# From address - use resend.dev for testing, or verify your own domain
EMAIL_FROM=Movie Deal Tracker <deals@resend.dev>
# Optional: Audience ID to add new subscribers to your Resend contacts
# Get from Resend Dashboard -> Audiences
RESEND_AUDIENCE_ID=

# Web Application Settings
SECRET_KEY=
BASE_URL=https://your-app-name.up.railway.app
# Admin key for accessing /admin/* endpoints
ADMIN_KEY=

# Worker Schedule (24-hour format)
SCHEDULE_RUN_AT=09:00

# Optional: For local testing with main.py --test-email
TEST_EMAIL_RECIPIENT=your.email@example.com

# Optional: Flask debug mode (set to true for local development)
FLASK_DEBUG=false
